{% for article in articles %}
<div class="col-xl-3 col-lg-4 col-md-6">
	<div class="col">
        <div class="card card-product-grid">
            <a href="#" class="img-wrap"> <img src="{{ article.photo }}" alt="{{article.titre}}"> </a>
            <div class="info-wrap">
                <a href="#" class="title text-truncate">{{article.titre}}</a>
                <div class="price mb-2">{{ article.prix |number_format(0,'.',' ') }} FCFA</div> <!-- price.// -->
    
                <a href="#" data-bs-toggle="dropdown" class="btn btn-sm btn-light"> 
                        <i class="material-icons md-edit"></i>  Edit  
                </a>
                <a href="#" data-bs-toggle="dropdown" class="btn btn-sm btn-outline-danger"> 
                        <i class="material-icons md-delete_forever"></i>  Delete  
                </a>
            </div>
        </div> <!-- card-product  end// -->
    </div>
</div>
{% endfor %}