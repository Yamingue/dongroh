{% extends "admin_theme/admin.html.twig" %}

{% block title %}Hello AdminCommandeController!{% endblock %}

{% block body %}
<div class="card mb-4">
    <header class="card-header">
        <div class="row gx-3">
            <div class="col-lg-4 col-md-6 me-auto">
                <input type="text" placeholder="Search..." class="form-control">
            </div>
            <div class="col-lg-2 col-6 col-md-3">
                <select class="form-select">
                    <option>Status</option>
                    <option>Active</option>
                    <option>Disabled</option>
                    <option>Show all</option>
                </select>
            </div>
            <div class="col-lg-2 col-6 col-md-3">
                <select class="form-select">
                    <option>Show 20</option>
                    <option>Show 30</option>
                    <option>Show 40</option>
                </select>
            </div>
        </div>
    </header> <!-- card-header end// -->
    <div class="card-body">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Date</th>
                    <th scope="col" class="text-end"> Action </th>
                </tr>
            </thead>
            <tbody>
                {#{ dump(commandes) }#}
                {% for commande in commandes %}  
                <tr>
                    <td>0901</td>
                    <td><b>{{ commande.nom }}</b></td>
                    <td>{{ commande.telephone }}</td>
                    <td>{{ commande.commande.total |number_format(0,'.',' ') }} FCFA</td>
                    <td><span class="badge rounded-pill alert-warning">Pending</span></td>
                    <td>{{ commande.doAt |date("d/m/Y") }}</td>
                    <td class="text-end">
                        <a href="{{ path('admin_commande_detaille',{id:commande.id}) }}" class="btn btn-light">Detail</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div> <!-- table-responsive //end -->
    </div> <!-- card-body end// -->
</div>
{% endblock %}
