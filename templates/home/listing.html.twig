
  {% for article in articles %}
  <div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
      <a href="#"><img class="card-img-top" src="{{ asset(article.photo) }}" alt="{{ article.titre }}"></a>
      <div class="card-body">
        <h4 class="card-title">
          <a href="{{ path('more',{id:article.id}) }}">{{ article.titre }}</a>
        </h4>
        <h5>{{ article.prix |number_format(0,'.',' ') }} FCFA</h5>
        <p class="card-text">
          {% if article.description |length >70 %}
          {{ article.description |slice(0, 70)}} ...
          {% else %}
          {{ article.description}}
          {% endif %}
          
        </p>
      </div>
      <div class="card-footer">
        <small class="text-muted">
          {% for n in range(1, 5, 1) %}
			{% if n <= article.note %} &#9733; {% else %} &#9734; {% endif %} {% endfor %} </span>
        </small>
        <a href="https://www.facebook.com/sharer/sharer.php?u={{ absolute_url( path('more',{id:article.id}) ) }}" target="_blank">
          Share on Facebook
        </a>
      </div>
    </div>
  </div>
      
  {% endfor %}