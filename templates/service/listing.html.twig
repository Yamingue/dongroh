<div class="row mt-2">
    {% for service in services %}
     {# card pour le service de marketing #}
     <div class="col-sm-6 service col-md-4 col-lg-3 mb-2">
        <!-- Card -->
        <div class="card testimonial-card">

            <!-- Background color -->
            <div class="card-up aqua-gradient"></div>

            <!-- Avatar -->
            <div class="avatar mx-auto  light-blue-text">
                <i class="fas fa-tools"></i>
            </div>

            <!-- Content -->
            <div class="card-body">
                <!-- Name -->
                <h4 class="card-title">{{ service.title }}</h4>
                <hr>
                <!-- Quotation -->
                <p><i class="fas fa-quote-left"></i> {{ service.description }}
                </p>
                <a href="#" type="button" class="btn btn-light-blue btn-sm">Acceder</a>
            </div>

        </div>
        <!-- Card -->
    </div>
{% endfor %}
</div>