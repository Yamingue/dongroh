{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="center mt-2">
    <!-- Material form register -->
    <div class="card">

        <h5 class="card-header info-color white-text text-center py-4">
            <strong>Connexion</strong>
        </h5>

        <!--Card content-->
        <div class="card-body ">
            <form method="POST">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="md-form md-outline">
                    <label for="inputEmail">Email ou numero</label>
                    <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                        required autofocus>
                </div>

                <div class="md-form md-outline">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me
                functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <div class="text-center pb-2">
                    <button type="submit"
                        class="btn primary-color-dark btn-sm text-white mb-4 waves-effect waves-light rounded">Connexion</button>

                    <p>Pas de compte? <a href="{{ path('app_register') }}">Cr√©er</a></p>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <p><a href="{{ path('app_forgot_password_request') }}">Mot de pass oublier?</a></p>
                </div>
            </form>
            <!-- Form -->

        </div>

    </div>
    <!-- Material form register -->
</div>



{% endblock %}