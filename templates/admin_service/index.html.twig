{% extends "blank.admin.html.twig" %}

{% block title %}Hello AdminServiceController!{% endblock %}

{% block body %}
<div class="row">
    <div class="col-sm-8 col-md-8">
        <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">Titre </th>
                    <th class="th-sm">Description</th>
                    <th class="th-sm">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for service in services %}
                <tr>
                    <td>{{ service.title }}</td>
                    <td>{{ service.description }}</td>
                    <td>
                        <a href="{{ path('admin_service_rm',{'id':service.id}) }}" class="btn btn-danger btn-circle"
                            id="delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
    <div class="col-sm-4 col-md-4">
        {{ form_start(form)}}
        {{ form_widget(form)}}
        <button type="submit" class="btn btn-sm btn-primary">Ajouter</button>
        {{ form_end(form)}}
    </div>
</div>

{% endblock %}