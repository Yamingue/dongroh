{% extends "admin_theme/admin.html.twig" %}
{% block title %}Hello AdminReviewController!{% endblock %}

{% block body %}
<div class="card mb-4">
    <!-- card-header end// -->
    <div class="card-body">

<div class="table-responsive">                 
<table class="table table-hover">
<thead>
<tr>
     <th>#Id</th>
     <th>Articles</th>
     <th>Nom</th>
     <th>Note</th>
     <th>Commentaire</th>
</tr>
</thead>
<tbody>
{% for note in notes %}
<tr>
   
     <td>{{note.id}}</td>
     <td><b>{{note.article.titre}}</b></td>
     <td>
         {% if note.auteur %}
         {{note.auteur}}
         {% else %}
         Anonyme
         {% endif %}  
    </td>
         
     <td>
        {{note.note}}
     </td>
     <td>{{note.commentaire}}</td>
</tr>
     
{% endfor %}
</tbody>
</table>

</div> <!-- table-responsive//end -->
    </div>
    <!-- card-body end// -->
   </div>
{% endblock %}
